###############################################
# cloud-devbox 环境变量模板
###############################################

# 基本配置，默认区域：东京
GCP_PROJECT_ID=
GCP_REGION=asia-northeast1
GCP_ZONE=asia-northeast1-a

# 网络与安全
ADDRESS_NAME=dev-ip
FIREWALL_RULE_NAME=allow-ssh
SOURCE_RANGES_SSH=0.0.0.0/0
NETWORK_TAGS=ssh,http

# 永久磁盘，默认 20G，后续可以修改
DISK_NAME=dev-data
DISK_SIZE_GB=20
DISK_TYPE=pd-balanced

# 自定义镜像（可选）
# 如果配置了自定义镜像，脚本会先检测是否存在
# 如果不存在或未配置，则自动使用默认镜像
IMAGE_FAMILY=dev-gold
IMAGE_PROJECT=

# 默认镜像配置（当自定义镜像不可用时使用）
# 默认使用 Debian 12，也可以改为 Ubuntu 或其他发行版
DEFAULT_IMAGE_FAMILY=debian-12
DEFAULT_IMAGE_PROJECT=debian-cloud
# 其他可选：ubuntu-2404-lts-amd64 (ubuntu-os-cloud)

# 机器类型与实例命名
SPOT_INSTANCE_NAME=my-dev-machine
SPOT_MACHINE_TYPE=e2-standard-4
MAX_RUN_DURATION=4h
TERMINATION_ACTION=DELETE

# 构建镜像：默认 ubuntu 24.04 LTS
BUILDER_INSTANCE_NAME=dev-builder
BUILDER_MACHINE_TYPE=e2-standard-4
BASE_IMAGE_FAMILY=ubuntu-2404-lts-amd64
BASE_IMAGE_PROJECT=ubuntu-os-cloud

# 挂载配置
MOUNT_POINT=/workspace
MOUNT_DEVICE=/dev/sdb

# 标签用于批量销毁
LABEL_KEY=devbox
LABEL_VALUE=yes

# 可选：为实例指定服务账号（留空使用默认）
SERVICE_ACCOUNT_EMAIL=

# SSH 配置（可选，用于直接 SSH 登录）
# 如果配置了 SSH 公钥，会自动添加到实例的 metadata 中
# 推荐使用项目目录下的 ssh/ 目录存储密钥（已在 .gitignore 中排除）
# 生成密钥：bash scripts/setup-ssh-key.sh
# 或手动：ssh-keygen -t ed25519 -f ./ssh/gcp_dev -C "dev"
SSH_USERNAME=dev
SSH_PUBLIC_KEY_FILE=./ssh/gcp_dev.pub
